<%= form_with(model: Comment.new, local: true) do |form| %>

    <%= form.hidden_field  :user_id, id: :comment_user_id, value: current_user.id %>
    <%= form.hidden_field  :post_id, id: :comment_post_id %>

  <div class="field">
    <%= form.label 'Bình luận' %>
    <%= form.text_field :content, id: :comment_content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
